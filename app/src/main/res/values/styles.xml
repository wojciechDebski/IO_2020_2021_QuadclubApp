<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlackRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="poppins_12sp_black">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="poppins_12sp_white">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="poppins_bold_12sp_white">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="DarkGreenRoundedButton">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="poppins_bold_30sp_dark_green">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="padding_25_10_25_10">
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="style_home_headers">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="poppins_bold_20sp_black">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="poppins_semibold_14sp_black">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="customTextInputEditText">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.Suffix" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:theme">@style/EditTextTheme</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/lighter_green</item>
        <item name="colorControlHighlight">@color/lighter_green</item>
    </style>

    <style name="text_view_style_bold">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>


    <style name="poppins_14sp_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="poppins_semibold_12sp_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="poppins_bold_20sp_white">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="poppins_semibold_20sp_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="RedRoundedButton">
        <item name="colorPrimary">#CC1A1A</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="poppins_semibold_20sp_white">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="poppins_16sp_white">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
    </style>




</resources>